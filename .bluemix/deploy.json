{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Sample Deploy Stage",
    "description": "sample toolchain",
    "longDescription": "The Delivery Pipeline automates continuous deployment.",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
       "prod-account-id": {
            "description": "The id of your IAM account",
            "type": "string"
        },
       "prod-api-key": {
            "description": "The value of your Bluemix API key",
            "type": "string"
        },
       "prod-cluster-id": {
            "description": "The id of your Kubernets cluster",
            "type": "string"
        }
    },
    "required": ["prod-region", "prod-organization", "prod-space", "prod-account-id", "prod-api-key", "prod-cluster-id"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },
		{
		  "type": "select",
		  "key": "prod-region",
          "title": "Region"
		},
        {
          "type": "text",
          "readonly": false,
          "title": "Account id",
          "key": "prod-account-id"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "API key",
          "key": "prod-api-key"
        },
		{
		  "type": "select",
		  "key": "prod-organization",
          "title": "Organization"
		},
		{
		  "type": "select",
		  "key": "prod-space",
		  "readonly": false,
          "title": "Space"
		},
        {
          "type": "text",
          "readonly": false,
          "title": "Cluster id",
          "key": "prod-cluster-id"
        }
    ]
}
