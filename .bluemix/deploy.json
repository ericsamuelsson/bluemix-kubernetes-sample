{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Sample Deploy Stage",
    "description": "sample toolchain",
    "longDescription": "The Delivery Pipeline automates continuous deployment.",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
       "prod-api-key": {
            "description": "The value of your Bluemix API key",
            "type": "string"
        },
       "prod-cluster": {
            "description": "The name of your Kubernets cluster",
            "type": "string"
        }
    },
    "required": ["prod-region", "prod-organization", "prod-space", "prod-api-key", "prod-cluster"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },
		{
		  "type": "select",
		  "key": "prod-region",
          "title": "Region"
		},
        {
          "type": "password",
          "readonly": false,
          "title": "API key",
          "key": "prod-api-key",
          "required": true
        },
		{
		  "type": "select",
		  "key": "prod-organization",
          "title": "Organization"
		},
		{
		  "type": "select",
		  "key": "prod-space",
		  "readonly": false,
          "title": "Space"
		},
        {
          "type": "text",
          "readonly": false,
          "title": "Cluster name",
          "key": "prod-cluster",
          "required": true
        }
    ]
}
